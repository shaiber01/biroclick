  "correction_models": {
    "temperature": {
      "linear_gamma": {
        "description": "Linear scaling of Drude damping with temperature",
        "formula": "gamma(T) = gamma_ref * (1 + coeff * (T - T_ref))",
        "applicable_to": ["metals"],
        "notes": "Simple model valid near room temperature"
      },
      "holstein": {
        "description": "Holstein model for electron-phonon scattering",
        "formula": "gamma(T) = gamma_0 + A*T^5 * integral(x^5/(e^x-1)/(1-e^-x), 0, Theta_D/T)",
        "applicable_to": ["metals"],
        "notes": "More accurate over wide T range"
      },
      "varshni": {
        "description": "Varshni equation for semiconductor bandgap",
        "formula": "Eg(T) = Eg(0) - alpha*T^2/(T + beta)",
        "applicable_to": ["semiconductors"],
        "notes": "Standard model for temperature-dependent bandgap"
      }
    },
    "thin_film": {
      "fuchs-sondheimer": {
        "description": "Surface scattering model for thin films",
        "formula": "rho_film/rho_bulk = 1 + (3/8)*(1-p)*l/d for d >> l",
        "parameters": ["mean_free_path", "specularity_parameter", "thickness"],
        "applicable_to": ["metals"],
        "notes": "p=0 diffuse scattering, p=1 specular"
      },
      "mayadas-shatzkes": {
        "description": "Grain boundary scattering model",
        "formula": "rho_film/rho_bulk depends on grain size and reflection coefficient",
        "parameters": ["grain_size", "grain_boundary_reflection"],
        "applicable_to": ["metals"],
        "notes": "Important for polycrystalline films"
